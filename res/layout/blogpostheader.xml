<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:a="http://schemas.android.com/apk/res/android"
              a:orientation="horizontal"
              a:layout_width="match_parent"
              a:layout_height="match_parent">

    <TextView
        a:textSize="11sp"
        a:width="0px"
        a:layout_weight="3"
        a:layout_width="wrap_content"
        a:layout_height="wrap_content"
        a:layout_margin="2dp"
        a:textStyle="bold"
        a:text="@string/date"/>

    <TextView
        a:textSize="11sp"
        a:width="0px"
        a:layout_weight="3"
        a:layout_width="wrap_content"
        a:layout_height="wrap_content"
        a:layout_margin="2dp"
        a:textStyle="bold"
        a:text="@string/title"/>

    <TextView
        a:textSize="11sp"
        a:width="0px"
        a:layout_weight="3"
        a:layout_width="wrap_content"
        a:layout_height="wrap_content"
        a:layout_margin="2dp"
        a:textStyle="bold"
        a:text="@string/summary"/>

</LinearLayout>